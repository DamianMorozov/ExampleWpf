<Window x:Class="WpfApp.WindowStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="WindowStackPanel" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Background="Blue" Content="1" Height="30"/>
            <Button Background="White" Content="2" Height="30"/>
            <Button Background="Red" Content="3" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Background="Blue" Content="1" MinWidth="30"/>
            <Button Background="White" Content="2" MinWidth="30"/>
            <Button Background="Red" Content="3" MinWidth="30"/>
        </StackPanel>
    </Grid>
</Window>
