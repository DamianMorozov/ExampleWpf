<Window x:Class="WpfApp.WindowCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="WindowCanvas" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <Canvas Background="Lavender">
            <Button Background="AliceBlue" Canvas.Top="20" Canvas.Left="40" Content="Top 20 Left 40"></Button>
            <Button Background="LightBlue" Canvas.Top="20" Canvas.Right="40" Content="Top 20 Right 40"></Button>
            <Button Background="AliceBlue" Canvas.Bottom="20" Canvas.Left="40" Content="Bottom 20 Left 40"></Button>
            <Button Background="LightBlue" Canvas.Bottom="20" Canvas.Right="40" Content="Bottom 20 Right 40"></Button>
        </Canvas>
    </Grid>
</Window>
