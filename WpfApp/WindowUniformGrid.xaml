<Window x:Class="WpfApp.WindowUniformGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="WindowUniformGrid" Height="300" Width="400" ResizeMode="NoResize">
    <UniformGrid Rows="2" Columns="2">
        <Button Content="Left top" FontSize="24" FontWeight="Bold"></Button>
        <Button Content="Right top" FontSize="24" FontWeight="Bold"></Button>
        <Button Content="Left bottom" FontSize="24" FontWeight="Bold"></Button>
        <Button Content="Right bottom" FontSize="24" FontWeight="Bold"></Button>
    </UniformGrid>
</Window>
